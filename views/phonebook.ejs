<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header') %>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/phonebook.css" />
    <link rel="icon" type="image/png" href="/images/iw5.png" />
    <title>IndianWife.in</title>
</head>
<body>
  <%- include('partials/popmsg') %> <%- include('partials/nav') %>
  <div class="main">
    <div class="container">
      <!-- Tabs -->
      <div class="tabs">
          <div class="tab active" data-tab="sentSuperInterests" onclick="showTab('sentSuperInterests')">Intrest Received </div>
          <div class="tab" data-tab="receivedSuperInterests" onclick="showTab('receivedSuperInterests')">Intrest Sent</div>
          <div class="tab" data-tab="contacts" onclick="showTab('contacts')">Contacts</div>
      </div>
  
      <!-- Sent Super Interests -->
      <div id="sentSuperInterests" class="tab-content active">
          <% if (interestedUsers.length > 0) { %>
              <% interestedUsers.forEach(user => { %>
                  <div class="user-card" onclick="window.location.href='/profile/<%= user._id %>'">
                      <img src="<%= user.images && user.images.length > 0 ? user.images[0] : '/default-avatar.png' %>" alt="User">
                      <div class="user-info">
                          <strong><%= user.fullname %>, <%= user.age %></strong>
                          <span><%= user.City %></span>
                      </div>
                  </div>
              <% }) %>
          <% } else { %>
              <p>No super interests sent.</p>
          <% } %>
      </div>
  
      <!-- Received Super Interests -->
      <div id="receivedSuperInterests" class="tab-content">
          <% if (receivedSuperInterests.length > 0) { %>
              <% receivedSuperInterests.forEach(user => { %>
                  <div class="user-card" onclick="window.location.href='/profile/<%= user._id %>'">
                      <img src="<%= user.images && user.images.length > 0 ? user.images[0] : '/default-avatar.png' %>" alt="User">
                      <div class="user-info">
                          <strong><%= user.fullname %>, <%= user.age %></strong>
                          <span><%= user.City %></span>
                      </div>
                  </div>
              <% }) %>
          <% } else { %>
              <p>No super interests received.</p>
          <% } %>
      </div>
  
      <!-- Contacts -->
      <div id="contacts" class="tab-content">
          <% if (phonebookUsers.length > 0) { %>
              <% phonebookUsers.forEach(user => { %>
                  <div class="user-card" onclick="window.location.href='/profile/<%= user._id %>'">
                      <img src="<%= user.images && user.images.length > 0 ? user.images[0] : '/default-avatar.png' %>" alt="User">
                      <div class="user-info">
                          <strong><%= user.fullname %>, <%= user.age %></strong>
                          <span><%= user.City %></span>
                          <div class="contact-info">
                              📞 <%= user.phone || "Not available" %><br>
                              📧 <%= user.email || "Not available" %>
                          </div>
                      </div>
                  </div>
              <% }) %>
          <% } else { %>
              <p>No contacts available.</p>
          <% } %>
      </div>
  
  </div>
  </div>
  <script src="/js/phonebook.js"></script>
</body>
</html>